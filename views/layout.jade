!!!
html
  head
    meta(charset='utf-8')
    title= title
    meta(name="description", content="Get your personalized social profile based on your facebook, linkedin, twitter, blog and other integration.")
    meta(name="author", content="nhm tanveer hossain khan hasan (hasan@welltreat.us)")

    // Le HTML5 shim, for IE6-8 support of HTML elements
    //if lt IE 9
      script(src="http://html5shim.googlecode.com/svn/trunk/html5.js")

    //- List down all required stylesheets
    link(type="text/css", href="/css/custom-theme/jquery-ui-1.8.16.custom.css", rel="stylesheet")
    link(href="bootstrap/bootstrap.css", rel="stylesheet")
    link(href="/css/demo.css", rel="stylesheet")
    link(href="/css/application.css", rel="stylesheet")

    //- Let other template append something here
    yield

  body
    //if IE
      link(rel="stylesheet", type="text/css", href="/css/custom-theme/jquery.ui.1.8.16.ie.css")

    include includes/_topbar

    //- Body container
    .container-fluid
      .content
        != body

      include includes/_footer

    //- Include supporting pregenerated html templates
    include includes/_pregenerated

    //- Include required javascripts
    include includes/_javascripts

    //- Let other template append something here
    yield
